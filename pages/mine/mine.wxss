}
.server-box{
  width:160rpx;
  height: 160rpx;
  border:1px solid #ebebeb;
  border-radius: 10rpx;
  margin-right: 30rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.server-list{
  padding:20rpx 0;
  flex-wrap: wrap;
}
.photo{
  width:100%;
  height: 100%;
  display: block;
}
.server-btn{
  width:100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #9cc829;
  position: fixed;
  left: 0;
  bottom:0;
}
.delete-pic{
      position: absolute;
    top: -15rpx;
    right: -15rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    width: 50rpx;
    background: #ff4544;
    color: #fff;
    font-weight: bolder;
    border-radius: 999rpx;
    font-size: 9pt;
    box-shadow: 0 1rpx 2rpx rgba(0,0,0,.2);
}
