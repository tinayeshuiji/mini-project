.mine-box{
  width:100%;
  height:240rpx;
  background-color: #44ca68;
}
.order{
  width:32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.mine-line{
  width: 100%;
  height: 100rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  line-height: 100rpx;
  border-bottom:1px solid #e5e5e5;

 
}
.input-box{
  height: 100rpx;
  line-height: 100rpx;
  padding:0 10rpx;
}
.code{
    width:200rpx;
