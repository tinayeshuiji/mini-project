/* pages/login/login.wxss */
page {
    background: #fff;
    height: 100%;
    overflow: hidden;
}
.login-box{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  height: 50%;
  padding: 80rpx 40rpx;
}
.login-txt{
  width:100%;
  height: 150rpx;
    display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
  margin-top: 50rpx;
}
.login-txt text:nth-child(1){
  font-size: 18px;

}
.login-txt text:nth-child(2){
  font-size: 15px;
  color: #888;
  
}
.login-btn {
  width: 100%;
  margin-top: 80rpx;
    border: none;
    height: 88rpx;
    line-height: 88rpx;
    background: #9cc829;
    color: #fff;
    font-size: 11pt;
    border-radius: 999rpx;
}
.login-btn::after {
    display: none;
}
.login-btn.button-hover {
    box-shadow: inset 0 5rpx 30rpx rgba(0,0,0,.15);
}
.icon-login{
  width: 200rpx;
  height: 200rpx;
  display: block;
}