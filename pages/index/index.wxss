@import "../template/tem.wxss";
.banners {
  width: 100%;
  background: #fff;
  height: 400rpx;
  position: relative;
}

.banners swiper {
  width: 100%;
  height: 100%;
}

.banners-img {
  width: 100%;
  height: 100%;
}

.zixun {
  width: 98%;
  height: 80rpx;
  overflow: hidden;
  margin: 0 auto;
  background: #fff;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.zixun-left{
  width:120rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
}
.zixun-left text{
  font-size: 24rpx;
}

.zixun-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;
  display: block;
}

.zixun_list {
  width: calc(100% - 120rpx);
}

.zixun-box {
  height: 100%;
  width: calc(100% - 120rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.zixun-text {
  display: inline-block;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  color: #666;
  overflow: hidden;
}

.call {
  width: 30rpx;
  height: 30rpx;
  display: block;
  margin-right: 10rpx;
}
