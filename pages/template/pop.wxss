page {
  height: 100%;
  overflow: hidden;
}

.pop-box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.pop-container {
  position: absolute;
  top: 50%;
  margin-top: -280rpx;
  left: 50%;
  margin-left: -280rpx;
  background-color: #fff;
  height: 560rpx;
  width: 560rpx;
  border-radius: 15rpx;
}

.success-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
  font-size: 36rpx;
  color: #1aac19;
  border-bottom: 1px solid #93b091;
}

.icon-close {
  width: 24rpx;
  height: 24rpx;
  display: block;
  position: absolute;
  left: 20rpx;
  top: 38rpx;
}

.success-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 460rpx;
  padding: 30rpx 0;
}

.icon-success {
  width: 128rpx;
  height: 128rpx;
  display: block;
}

.success-btn ::after {
  display: none;
}

.success-content text {
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
}

.success-btn {
  width: 80%;
  margin: 0 auto;
  background-color: #1aac19;
  font-size: 37rpx;
  color: #fff;
  border-radius: 15rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.pop-fail {
  position: absolute;
  top: 50%;
  margin-top: -220rpx;
  left: 50%;
  margin-left: -280rpx;
  background-color: #fff;
  height: 440rpx;
  width: 560rpx;
  border-radius: 15rpx;
}

.fail-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  position: relative;
  font-size: 36rpx;
  color: #ec1919;
  border-bottom: 1px solid #93b091;
}

.fail-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 340rpx;
  padding: 30rpx 0;
}

.fail-content text {
  text-align: center;
  font-size: 26rpx;
  line-height: 60rpx;
}

.fail-btn {
  width: 80%;
  margin: 0 auto;
  background-color: #ec1919;
  font-size: 37rpx;
  color: #fff;
  border-radius: 15rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

/* 海报 */

.poster-box {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 10;
}

.poster-container {
  background-color: #fff;
  height: 80%;
  width: 80%;
  border-radius: 20rpx;
}

.poster {
  width: 90%;
  height: 70%;
  display: block;
}

.poster-btns {
  margin: 50rpx auto;
  width: 100%;
}

.poster-btn {
  background-color: #ff4544;
  color: #fff;
  font-size: 28rpx;
  height: 100rpx;
  line-height: 100rpx;
  width: 80%;
  margin: 0 auto;
  text-align: center;
  border-radius: 100rpx;
}
.poster-close{
  width:48rpx;
  height: 48rpx;
  display: block;
}
.erweima{
  width:90%;
  height: 600rpx;
  display: block;
  margin: 100rpx auto;
}

.btn-photo {
  width: 320rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background-color: #ff2a00;
  text-align: center;
  color: #fff;
  font-size: 13px;
  margin: 100rpx auto 0 auto;
  outline: none;
  border: none;
}
.mini-box {
  width: 100%;
  height: 100%;
  padding-top: 80rpx;
}


.mini-box text {
  display: block;
  line-height: 50rpx;
  padding: 0 30rpx;
  margin-top: 30rpx;
  font-size: 13px;
  text-align: center;
}
